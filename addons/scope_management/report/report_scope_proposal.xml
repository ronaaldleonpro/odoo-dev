<odoo>
    <!-- Reporte Principal con Diseño Unificado -->
    <record id="action_report_scope_proposal" model="ir.actions.report">
        <field name="name">Technical Proposal</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">scope_management.report_scope_proposal_template</field>
        <field name="print_report_name">'Propuesta Técnica - %s' % (object.name)</field>
        <field name="binding_type">report</field>
    </record>

    <template id="report_scope_proposal_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="scope_management.report_scope_proposal_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

    <template id="report_scope_proposal_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc"/>
            <div class="page">
                <h2>Propuesta Técnica para #<t t-esc="doc.name"/>
                </h2>
                <t t-if="not doc.order_line">
                    <p>No se encontraron líneas de orden en esta propuesta.</p>
                </t>
                <t t-foreach="doc.order_line" t-as="line">
                    <div style="margin-bottom: 25px; border-bottom: 1px solid #eee; padding-bottom: 15px;">
                        <t t-if="line.product_id.scope_id and line.product_id.scope_id.name and line.product_id.scope_id.description">
                            <h5>Tecnología de: 
                                <span class="fw-bold">
                                    <t t-esc="line.product_id.scope_id.name"/>
                                </span>
                            </h5>
                            <div>
                                <h5>Producto: 
                                    <span class="fw-bold">
                                        <t t-esc="line.product_id.name"/>
                                    </span>
                                </h5>
                                <p>
                                    <t t-esc="line.product_id.scope_id.description"/>
                                </p>
                            </div>
                        </t>
                        <t t-else="">
                            <div>
                                <h5>Producto: 
                                    <span class="fw-bold">
                                        <t t-esc="line.product_id.name"/>
                                    </span>
                                </h5>
                                <p>No hay alcances relacionados con este producto.</p>
                            </div>
                        </t>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>