<odoo>
    <!-- Reporte Principal con Diseño Unificado -->
    <record id="action_report_scope_proposal" model="ir.actions.report">
        <field name="name">Technical Proposal</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">scope_management.report_scope_proposal_template</field>
        <field name="report_file">scope_management.report_scope_proposal</field>
        <field name="print_report_name">'Propuesta Técnica - %s' % (object.name)</field>
        <field name="paperformat_id" ref="scope_management.paperformat_scope_pdf"/>
    </record>

    <template id="report_scope_proposal_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="scope_management.report_scope_proposal_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

    <template id="report_scope_proposal_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc"/>

            <div class="page">
                <h2>Propuesta Técnica para <t t-esc="doc.name"/>
                </h2>

                <!-- Mostrar líneas de orden con sus alcances -->
                <t t-foreach="doc.order_line" t-as="line">
                    <div style="margin-bottom: 25px; border-bottom: 1px solid #eee; padding-bottom: 15px;">
                        <h3>Producto: <t t-esc="line.product_id.display_name"/>
                        </h3>

                        <t t-if="line.product_id.scope_id and line.product_id.scope_id.description">
                            <div>
                                <strong>Servicio:</strong>
                                <t t-esc="line.product_id.scope_id.name"/>
                                <p>
                                    <t t-raw="line.product_id.scope_id.description"/>
                                </p>
                            </div>
                        </t>
                        <t t-elif="line.product_id.scope_id">
                            <div>
                                <strong>Servicio:</strong>
                                <t t-esc="line.product_id.scope_id.name"/>
                                <p>No hay descripción disponible para este alcance.</p>
                            </div>
                        </t>
                        <t t-else="">
                            <p>No hay alcances relacionados a este producto.</p>
                        </t>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>
