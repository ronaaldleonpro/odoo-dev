<odoo>
    <record id="view_sales_team_document_form_inherit" model="ir.ui.view">
        <field name="name">sale.team.document.form.inherit</field>
        <field name="model">quotation.document</field>
        <field name="inherit_id" ref="sale_pdf_quote_builder.quotation_document_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="class">oe_inline</attribute>
                <attribute name="string">Document Name</attribute>
                <attribute name="placeholder">Document Name</attribute>
                <attribute name="required">1</attribute>
                <attribute name="readonly">0</attribute>
            </xpath>

            <xpath expr="//label[@for='datas']" position="replace">
                <label for="ir_attachment_id" string="Attachment"/>
            </xpath>

            <xpath expr="//field[@name='datas']" position="replace">
                <field name="ir_attachment_id" filename="name" options="{'accepted_file_extensions': '.pdf'}" class="oe_inline" widget="attachment" string="Attachment" placeholder="File"/>
            </xpath>

            <xpath expr="//field[@name='document_type']" position="attributes">
                <attribute name="class">oe_inline</attribute>
                <attribute name="widget">selection</attribute>
                <attribute name="string">Sales Team Document Type</attribute>
            </xpath>

            <xpath expr="//field[@name='quotation_template_ids']" position="attributes">
                <attribute name="placeholder">Template</attribute>
            </xpath>
        </field>
    </record>
</odoo>