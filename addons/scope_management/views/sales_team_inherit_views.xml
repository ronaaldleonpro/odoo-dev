<odoo>
    <record id="view_crm_team_form_inherit_scope" model="ir.ui.view">
        <field name="name">crm.team.form.inherit.scope</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
        <field name="arch" type="xml">
            <!-- Insertamos un grupo nuevo al final del sheet -->
            <xpath expr="//sheet" position="inside">
                <group string="Scopes">
                    <field name="x_scope_enabled" string="Enable Scope"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
